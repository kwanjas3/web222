<div class="row">
    <div class="col-md-12">
        <h1>{{title}}
            <a href="/employees/add" class="btn btn-success pull-right" style="margintop:5px;">Add New Employee</a>
        </h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired On</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{employeeNum}}</td>
                        <td><a href="/employee/{{employeeNum}}">{{firstName}} {{last_name}}</a></td>
                        <td><a href="mailto:{{email}}">{{email}}</a></td>
                        <td>{{addressStreet}} {{addresCity}} {{addressState}} {{addressPostal}}</td>
                        <td>{{#if isManager}}{{else}}<a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a>{{/if}}</td>
                        <td><a href="/employees?status={{status}}">{{status}}</a></td>
                        <td><a href="/employees?department={{department}}">{{department}}</a></td>
                        <td>{{hireDate}}</td>
                        <td> <a href="/employee/delete/{{employeeNum}}" class="btn btn-danger pull-right" style="margintop:5px;">Remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
         

            

        </div>
    </div>
</div>